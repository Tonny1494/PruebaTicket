<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background: -webkit-linear-gradient(90deg,ligthgray 25%, ligthsteelblue 75%)">
    <header style="background-color:black; color:white;text-align:center" >
        <br /><h3> Registro Tickets</h3><br />
    </header>
    <nav class="row" style="background-color:gray;height:40px ;margin :1px 1px 1px 1px">
        <div class="btn-group">
            <button class="btn btn-primary" onclick="location.href='../Seccion/Index/'">Seccion</button>
            <button class="btn btn-primary" onclick="location.href='../Ticket/Index/'">Ticket</button>
        </div>
    </nav>
    <main class="row" style="margin: 2px 2px 2px 2px; background-color:beige;width:96%">
        <div class="container">
            @RenderBody()
        </div>
    </main>
    <footer style="background-color:black;color:white ; text-align:center">
        <br /><small>Todos los derechos Reservados</small><br />

    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
